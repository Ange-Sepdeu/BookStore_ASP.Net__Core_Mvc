@using project2.Models
@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
        <div class="col-6 text-start mt-10">Category-List</div>
        <div class="col-12 text-end mb-5">
    <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">Create Category</a>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>