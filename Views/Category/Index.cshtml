@using project2.Models
@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["success"] != null) {
    <h2>@TempData["success"]</h2>
}
        <div class="col-6 text-start mt-10">Category-List</div>
        <div class="col-12 text-end mb-5">
    <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">Create Category</a>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="70%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                        <a asp-controller="Category" class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>